{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "src",
    "types": [
      "reflect-metadata",
      "node",
      "express",
      "inversify",
      "jsonwebtoken",
      // "mongodb",
      // "multer",
      // "pg",
      "jest"
    ],
    "typeRoots": [
      "./src/custom_typings/*",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "tsconfig-paths.js"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ],
}